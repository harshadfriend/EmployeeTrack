<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="employeetrack.beit.employeetrack.AddVehicle">

    <EditText
        android:id="@+id/etVehName"
        android:hint="Vehicle Name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/etVehMobile"
        android:hint="Vehicle Associated Mobile Number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/etVehAddress"
        android:hint="Vehicle Number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/etVehIMEI"
        android:hint="IMEI of Mobile Number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/btnAddVeh"
        android:text="Add Vehicle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>
