<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context="employeetrack.beit.employeetrack.HomeActivity">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:layout_margin="1dp"
            android:id="@+id/btnProfile"
            android:textSize="18dp"
            android:text="Profile"
            android:layout_weight="1"
            android:background="@drawable/buttonborder"
            android:layout_width="0dp"
            android:layout_height="100dp" />
        <Button
            android:layout_margin="1dp"
            android:id="@+id/btnAttnd"
            android:textSize="18dp"
            android:text="Attendance"
            android:layout_weight="1"
            android:background="@drawable/buttonborder"
            android:layout_width="0dp"
            android:layout_height="100dp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:layout_margin="1dp"
            android:id="@+id/btnAddEmp"
            android:textSize="18dp"
            android:text="Add Employee"
            android:layout_weight="1"
            android:background="@drawable/buttonborder"
            android:layout_width="0dp"
            android:layout_height="100dp" />
        <Button
            android:layout_margin="1dp"
            android:id="@+id/btnAddVeh"
            android:textSize="18dp"
            android:text="Add Vehicle"
            android:layout_weight="1"
            android:background="@drawable/buttonborder"
            android:layout_width="0dp"
            android:layout_height="100dp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:layout_margin="1dp"
            android:id="@+id/btnTrackEmp"
            android:textSize="18dp"
            android:text="Track Employee"
            android:layout_weight="1"
            android:background="@drawable/buttonborder"
            android:layout_width="0dp"
            android:layout_height="100dp" />
        <Button
            android:layout_margin="1dp"
            android:id="@+id/btnTrackVeh"
            android:textSize="18dp"
            android:text="Track Vehicle"
            android:layout_weight="1"
            android:background="@drawable/buttonborder"
            android:layout_width="0dp"
            android:layout_height="100dp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:layout_margin="1dp"
            android:id="@+id/btnHelp"
            android:textSize="18dp"
            android:text="Help"
            android:layout_weight="1"
            android:background="@drawable/buttonborder"
            android:layout_width="0dp"
            android:layout_height="100dp" />
        <Button
            android:layout_margin="1dp"
            android:id="@+id/btnSettings"
            android:textSize="18dp"
            android:text="Settings"
            android:layout_weight="1"
            android:background="@drawable/buttonborder"
            android:layout_width="0dp"
            android:layout_height="100dp" />
    </LinearLayout>


</LinearLayout>

